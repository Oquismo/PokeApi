---
import { fetchPokemonList } from '../lib/fetchPokemonList';

interface Pokemon {
  name: string;
  sprite: string;
  height: number;
  weight: number;
  types: string[];
}
const pokemonList = await fetchPokemonList(100); // Obtener 100 Pokémon con sus detalles completos
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PokeAppi</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <main class="max-w-4xl mx-auto p-4">
      <h1 class="text-3xl font-bold text-center mb-8">PokeAppi</h1>
      {pokemonList.length > 0 ? (
        <ul class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
          {pokemonList.map((pokemon: Pokemon) => (
            <li class="p-4 bg-white rounded shadow hover:shadow-lg transition">
              <img
                src={pokemon.sprite}
                alt={`Sprite de ${pokemon.name}`}
                class="w-full h-auto mx-auto mb-2"
              />
              <p class="font-bold capitalize">{pokemon.name}</p>
              <p class="text-gray-600">Altura: {pokemon.height} Centímetros</p>
              <p class="text-gray-600">Peso: {pokemon.weight} kilogramos</p>
              <p class="text-gray-600">Tipos: {pokemon.types.join(', ')}</p>
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-center">No se pudieron cargar los Pokémon. Por favor, intenta de nuevo más tarde.</p>
      )}
    </main>
  </body>
</html>
